<h2>Create a new rental request!</h2>

<form role="form" class="form-inline" action=<%= cat_rental_requests_url %> method="post">

  <div class="form-group">
    <label for "cat">Cat</label>
    <select name="cat_rental_request[cat_id]" id="cat" class="form-control">
      <%Cat.all.each do |cat|%>
        <option value=<%=cat.id%>><%= cat.name %></option>
      <%end%>
    </select>
    <br>
  </div>

  <div class="form-group"
    <label for "start_date">Start Date</label>
    <input name="cat_rental_request[start_date]" id='start_date' type="date" class="form-control">
    <br>
  </div>

  <div class="form-group">
    <label for "end_date">End Date</label>
    <input name="cat_rental_request[end_date]" id='end_date' type="date" class="form-control">
    <br>
  </div>

  <input type="submit" value="Submit Request">
</form>
